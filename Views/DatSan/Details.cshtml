@model global::SanBong.Models.DatSan

@{
    ViewData["Title"] = "Hóa Đơn Tạm";
    var isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";
    Layout = isAjax ? null : "~/Views/Shared/_Layout.cshtml";
    
    // Xác định tiêu đề dựa trên trạng thái
    var pageTitle = Model.TrangThai switch
    {
        "Đã xác nhận" or "Hoàn tất" => "Hóa Đơn",
        "Đã cọc" => "Hóa Đơn Tạm (Đã Cọc)",
        _ => "Hóa Đơn Tạm"
    };
}

@if (!isAjax)
{
    <div class="container mt-4">
        <h2 class="text-center mb-4">@pageTitle</h2>
    </div>
}

<div class="@(isAjax ? "" : "container mt-4")">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card @(isAjax ? "border-0" : "")">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Thông Tin Khách Hàng</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Họ Tên:</dt>
                        <dd class="col-sm-8">@Model.MaKhNavigation?.HoTen</dd>

                        <dt class="col-sm-4">Điện Thoại:</dt>
                        <dd class="col-sm-8">@Model.MaKhNavigation?.DienThoai</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.MaKhNavigation?.Email</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h5>Thông Tin Sân</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Tên Sân:</dt>
                        <dd class="col-sm-8">@Model.MaSanNavigation?.TenSan</dd>

                        <dt class="col-sm-4">Vị Trí:</dt>
                        <dd class="col-sm-8">@Model.MaSanNavigation?.ViTri</dd>

                        <dt class="col-sm-4">Ngày Sử Dụng:</dt>
                        <dd class="col-sm-8">@Model.NgaySd.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Khung Giờ:</dt>
                        <dd class="col-sm-8">
                            @if (Model.MaKhungGioNavigation != null)
                            {
                                @Model.MaKhungGioNavigation.GioBatDau.ToString(@"hh\:mm") 
                                <text> - </text>
                                @Model.MaKhungGioNavigation.GioKetThuc.ToString(@"hh\:mm")
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <hr />

            @if (Model.ChiTietDichVus != null && Model.ChiTietDichVus.Any())
            {
                <h5>Dịch Vụ Thêm</h5>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Dịch Vụ</th>
                            <th>Số Lượng</th>
                            <th>Đơn Giá</th>
                            <th>Thành Tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ct in Model.ChiTietDichVus)
                        {
                            <tr>
                                <td>@ct.MaDvNavigation?.TenDv</td>
                                <td>@ct.SoLuong</td>
                                <td>@ct.DonGia.ToString("N0") VNĐ</td>
                                <td>@ct.ThanhTien?.ToString("N0") VNĐ</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr />
            }

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Ngày Đặt:</dt>
                        <dd class="col-sm-8">@Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Trạng Thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.TrangThai == "Đã xác nhận")
                            {
                                <span class="badge bg-success">@Model.TrangThai</span>
                            }
                            else if (Model.TrangThai == "Chờ xác nhận")
                            {
                                <span class="badge bg-warning">@Model.TrangThai</span>
                            }
                            else if (Model.TrangThai == "Đã hủy")
                            {
                                <span class="badge bg-danger">@Model.TrangThai</span>
                            }
                            else if (Model.TrangThai == "Hoàn tất")
                            {
                                <span class="badge bg-info">@Model.TrangThai</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.TrangThai</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.GhiChu))
                        {
                            <dt class="col-sm-4">Ghi Chú:</dt>
                            <dd class="col-sm-8">@Model.GhiChu</dd>
                        }
                    </dl>
                </div>

                <div class="col-md-6">
                    @{
                        var tongTien = Model.TongTien ?? 0;
                        var daThanhToan = (decimal)(ViewBag.TongDaThanhToan ?? 0);
                        var conLai = (decimal)(ViewBag.ConLai ?? tongTien);
                    }
                    
                    <!-- Chi tiết thanh toán -->
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <strong><i class="bi bi-receipt me-2"></i>Chi Tiết Thanh Toán</strong>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tổng tiền:</span>
                                <strong>@tongTien.ToString("N0") VNĐ</strong>
                            </div>
                            
                            @if (daThanhToan > 0)
                            {
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span><i class="bi bi-check-circle me-1"></i>Đã thanh toán:</span>
                                    <strong>@daThanhToan.ToString("N0") VNĐ</strong>
                                </div>
                            }
                            
                            @if (conLai > 0 && Model.TrangThai != "Đã xác nhận" && Model.TrangThai != "Hoàn tất")
                            {
                                <hr class="my-2">
                                <div class="d-flex justify-content-between text-danger">
                                    <span><strong>Còn lại:</strong></span>
                                    <strong class="fs-5">@conLai.ToString("N0") VNĐ</strong>
                                </div>
                            }
                            else if (Model.TrangThai == "Đã xác nhận" || Model.TrangThai == "Hoàn tất")
                            {
                                <hr class="my-2">
                                <div class="d-flex justify-content-between text-success">
                                    <span><strong>Trạng thái:</strong></span>
                                    <strong><i class="bi bi-check-circle-fill me-1"></i>ĐÃ THANH TOÁN ĐỦ</strong>
                                </div>
                            }
                        </div>
                    </div>
                    
                    @* Nút thanh toán - chỉ hiển thị khi chờ xác nhận (chưa thanh toán gì) *@
                    @if (Model.TrangThai == "Chờ xác nhận")
                    {
                        <div class="d-grid gap-2 mt-3">
                            <a asp-controller="Payment" asp-action="Index" asp-route-datSanId="@Model.MaDatSan" 
                               class="btn btn-success btn-lg">
                                <i class="bi bi-credit-card me-2"></i>Thanh Toán Ngay
                            </a>
                        </div>
                    }
                    else if (Model.TrangThai == "Đã cọc" && conLai > 0)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Đã đặt cọc!</strong> Bạn có thể thanh toán phần còn lại online hoặc khi đến sân.
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-controller="Payment" asp-action="PayRemaining" asp-route-datSanId="@Model.MaDatSan" 
                               class="btn btn-outline-success">
                                <i class="bi bi-credit-card me-2"></i>Thanh toán phần còn lại (@conLai.ToString("N0") VNĐ)
                            </a>
                        </div>
                    }
                    else if (Model.TrangThai == "Đã xác nhận" || Model.TrangThai == "Hoàn tất")
                    {
                        <div class="alert alert-success mt-3 text-center">
                            <i class="bi bi-check-circle me-2"></i>Đã thanh toán đầy đủ
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.GhiChu))
            {
                <div class="mt-3">
                    <strong>Ghi Chú:</strong> @Model.GhiChu
                </div>
            }
            
            @if (!isAjax)
            {
                <div class="text-center mt-4">
                    <a href="@(Context.Session.GetString("Role") == "Admin" || Context.Session.GetString("Role") == "NhanVien" ? "/DatSan/Index" : "/Home/LichSuDatSan")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay Lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>
