        $(document).ready(function() {
            // Pre-select field name in summary if already selected
            @if (ViewBag.PreSelectedMaSan != null)
            {
                var selectedFieldData = (ViewBag.SanBongs as List<global::SanBong.Models.SanBong>)?.FirstOrDefault(s => s.MaSan == ViewBag.PreSelectedMaSan);
                if (selectedFieldData != null)
                {
                    <text>
                    $('#summaryFieldName').text(@Html.Raw(Json.Serialize(selectedFieldData.TenSan)));
                    </text>
                }
            }

            // Pre-select date if passed
            @if (ViewBag.PreSelectedNgaySd != null)
            {
                <text>
                $('#ngaySd').val('@ViewBag.PreSelectedNgaySd');
                $('#ngaySd').change();
                </text>
            }

            // Check availability if field is pre-selected
            if (selectedField) {
                checkTimeSlotAvailability();
            }

            // Custom time toggle
            $('#customTimeToggle').change(function() {
                isCustomTime = $(this).is(':checked');
                if (isCustomTime) {
                    $('#predefinedTimeSlots').slideUp();
                    $('#customTimeSelection').slideDown();
                    $('#maKhungGio').removeAttr('required');
                    selectedTimeSlot = null;
                    multiplier = 1;
                } else {
                    $('#customTimeSelection').slideUp();
                    $('#predefinedTimeSlots').slideDown();
                    $('#maKhungGio').attr('required', 'required');
                }
                updateSummary();
            });

            // Custom time change
            $('#gioCustom, #soGio').on('input change', function() {
                updateSummary();
            });

            // Field selection (for non-pre-selected case)
            $('.field-card').click(function() {
                $('.field-card').removeClass('selected');
                $(this).addClass('selected');
                selectedField = $(this).data('masan');
                fieldPrice = parseFloat($(this).data('gia'));
                $('#maSan').val(selectedField);
                $('#summaryFieldName').text($(this).find('.field-name').text());
                
                // Check time slot availability when field and date selected
                checkTimeSlotAvailability();
                updateSummary();
            });

            // Time slot selection
            $('.time-slot').click(function() {
                if ($(this).hasClass('booked')) {
                    alert('Khung gi·ªù n√†y ƒë√£ ƒë∆∞·ª£c ƒë·∫∑t. Vui l√≤ng ch·ªçn khung gi·ªù kh√°c!');
                    return;
                }
                
                $('.time-slot').removeClass('selected');
                $(this).addClass('selected');
                selectedTimeSlot = $(this).data('khunggio');
                multiplier = parseFloat($(this).data('heso'));
                $('#maKhungGio').val(selectedTimeSlot);
                $('#summaryTime').text($(this).find('.time').text());
                updateSummary();
            });

            // Date selection
            $('#ngaySd').change(function() {
                const date = new Date($(this).val());
                const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                $('#summaryDate').text(date.toLocaleDateString('vi-VN', options));
                
                // Check time slot availability when date changed
                checkTimeSlotAvailability();
            });

            // Check time slot availability
            function checkTimeSlotAvailability() {
                const ngaySd = $('#ngaySd').val();
                if (!selectedField || !ngaySd) return;

                // Reset all time slots
                $('.time-slot').removeClass('booked').find('.status-badge').hide();

                // Check each time slot
                $('.time-slot').each(function() {
                    const timeSlot = $(this);
                    const maKhungGio = timeSlot.data('khunggio');

                    $.ajax({
                        url: '@Url.Action("CheckTimeSlotAvailability", "DatSan")',
                        type: 'POST',
                        data: {
                            maSan: selectedField,
                            ngaySd: ngaySd,
                            maKhungGio: maKhungGio,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.isBooked) {
                                timeSlot.addClass('booked');
                                timeSlot.find('.status-badge').show();
                            }
                        }
                    });
                });
            }

            // Service quantity controls
            $('.qty-plus').click(function() {
                const dvId = $(this).data('dvid');
                const max = parseInt($(this).data('max'));
                const input = $(`.qty-input[data-dvid="${dvId}"]`);
                const currentVal = parseInt(input.val());
                if (currentVal < max) {
                    input.val(currentVal + 1);
                    $(`.service-quantity[data-dvid="${dvId}"]`).val(currentVal + 1);
                    updateSummary();
                }
            });

            $('.qty-minus').click(function() {
                const dvId = $(this).data('dvid');
                const input = $(`.qty-input[data-dvid="${dvId}"]`);
                const currentVal = parseInt(input.val());
                if (currentVal > 0) {
                    input.val(currentVal - 1);
                    $(`.service-quantity[data-dvid="${dvId}"]`).val(currentVal - 1);
                    updateSummary();
                }
            });

            // Bi·∫øn l∆∞u th√¥ng tin gi·∫£m gi√° ng√†y l·ªÖ
            let holidayDiscount = null;

            // Ki·ªÉm tra ng√†y l·ªÖ khi ch·ªçn ng√†y
            $('#ngaySd').change(function() {
                const ngaySd = $(this).val();
                if (ngaySd) {
                    checkHolidayDiscount(ngaySd);
                }
            });

            function checkHolidayDiscount(ngaySd) {
                $.post('@Url.Action("CheckHolidayDiscount", "DatSan")', { ngaySd: ngaySd }, function(data) {
                    if (data.isHoliday) {
                        holidayDiscount = {
                            name: data.holidayName,
                            percent: data.discountPercent,
                            description: data.description
                        };
                        $('#holidayTitle').text('üéä ' + data.holidayName);
                        $('#holidayDescription').text(data.description);
                        $('#discountPercent').text('-' + data.discountPercent + '%');
                        $('#holidayBanner').slideDown();
                    } else {
                        holidayDiscount = null;
                        $('#holidayBanner').slideUp();
                    }
                    updateSummary();
                });
            }

            function updateSummary() {
                let fieldTotal = 0;
                
                if (isCustomTime) {
                    // Calculate for custom time
                    const soGio = parseInt($('#soGio').val()) || 2;
                    fieldTotal = fieldPrice * soGio;
                    
                    const gioCustom = $('#gioCustom').val();
                    if (gioCustom) {
                        const endTime = calculateEndTime(gioCustom, soGio);
                        $('#summaryTime').text(`${gioCustom} - ${endTime} (${soGio} gi·ªù)`);
                    } else {
                        $('#summaryTime').text(`${soGio} gi·ªù (Ch∆∞a ch·ªçn gi·ªù)`);
                    }
                } else {
                    // Calculate for predefined slots
                    fieldTotal = fieldPrice * multiplier;
                }

                // √Åp d·ª•ng gi·∫£m gi√° ng√†y l·ªÖ
                let discountAmount = 0;
                if (holidayDiscount) {
                    discountAmount = fieldTotal * (holidayDiscount.percent / 100);
                    fieldTotal = fieldTotal - discountAmount;
                }
                
                $('#summaryFieldPrice').text(fieldTotal.toLocaleString('vi-VN') + ' VNƒê');
                
                // Hi·ªÉn th·ªã th√¥ng tin gi·∫£m gi√°
                if (holidayDiscount && discountAmount > 0) {
                    if ($('#summaryDiscountRow').length === 0) {
                        $('#summaryFieldPrice').parent().after(
                            '<div class="summary-row" id="summaryDiscountRow" style="color: #28a745;">' +
                            '<span><i class="fas fa-gift"></i> Gi·∫£m gi√° ' + holidayDiscount.name + ' (-' + holidayDiscount.percent + '%)</span>' +
                            '<span id="summaryDiscount">-' + discountAmount.toLocaleString('vi-VN') + ' VNƒê</span>' +
                            '</div>'
                        );
                    } else {
                        $('#summaryDiscount').text('-' + discountAmount.toLocaleString('vi-VN') + ' VNƒê');
                    }
                } else {
                    $('#summaryDiscountRow').remove();
                }

                // Calculate service price
                let serviceTotal = 0;
                $('.qty-input').each(function() {
                    const qty = parseInt($(this).val());
                    const price = parseFloat($(this).data('gia'));
                    serviceTotal += qty * price;
                });
                $('#summaryServicePrice').text(serviceTotal.toLocaleString('vi-VN') + ' VNƒê');

                // Calculate total
                const total = fieldTotal + serviceTotal;
                $('#summaryTotal').text(total.toLocaleString('vi-VN') + ' VNƒê');
            }

            function calculateEndTime(startTime, hours) {
                const [h, m] = startTime.split(':').map(Number);
                const endHour = (h + hours) % 24;
                return `${String(endHour).padStart(2, '0')}:${String(m).padStart(2, '0')}`;
            }

            // Form validation and submission
            $('#bookingForm').submit(function(e) {
                e.preventDefault();
                
                if (!selectedField) {
                    alert('Vui l√≤ng ch·ªçn s√¢n b√≥ng!');
                    return false;
                }
                
                if (!$('#ngaySd').val()) {
                    alert('Vui l√≤ng ch·ªçn ng√†y s·ª≠ d·ª•ng!');
                    return false;
                }
                
                if (isCustomTime) {
                    // Custom time validation
                    const gioCustom = $('#gioCustom').val();
                    const soGio = parseInt($('#soGio').val());
                    
                    if (!gioCustom) {
                        alert('Vui l√≤ng ch·ªçn gi·ªù b·∫Øt ƒë·∫ßu!');
                        return false;
                    }
                    
                    if (!soGio || soGio < 1) {
                        alert('Vui l√≤ng nh·∫≠p s·ªë gi·ªù s·ª≠ d·ª•ng h·ª£p l·ªá!');
                        return false;
                    }
                    
                    // Submit to custom time action
                    $(this).attr('action', '@Url.Action("CreateCustomTime", "DatSan")');
                } else {
                    // Regular time slot validation
                    if (!selectedTimeSlot) {
                        alert('Vui l√≤ng ch·ªçn khung gi·ªù!');
                        return false;
                    }
                    
                    // Submit to regular create action
                    $(this).attr('action', '@Url.Action("Create", "DatSan")');
                }
                
                this.submit();
            });

            // Initial summary update
            updateSummary();
            
            // Ki·ªÉm tra ng√†y l·ªÖ n·∫øu ƒë√£ c√≥ ng√†y ƒë∆∞·ª£c ch·ªçn s·∫µn
            const preSelectedDate = $('#ngaySd').val();
            if (preSelectedDate) {
                checkHolidayDiscount(preSelectedDate);
            }        });
    </script>
}