@model IEnumerable<global::SanBong.Models.DatSan>

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã ĐS</th>
                            <th>Khách Hàng</th>
                            <th>Sân Bóng</th>
                            <th>Khung Giờ</th>
                            <th>Ngày SD</th>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                            <th>NV Xác Nhận</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>#@item.MaDatSan</strong></td>
                                <td>
                                    <i class="fas fa-user"></i>
                                    @(item.MaKhNavigation != null ? item.MaKhNavigation.HoTen : "N/A")
                                    @if (item.MaKhNavigation != null)
                                    {
                                        <br><small class="text-muted">@item.MaKhNavigation.DienThoai</small>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-futbol"></i>
                                    @(item.MaSanNavigation != null ? item.MaSanNavigation.TenSan : "N/A")
                                </td>
                                <td>
                                    @if (item.MaKhungGioNavigation != null)
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-clock"></i>
                                            @item.MaKhungGioNavigation.GioBatDau.ToString(@"hh\:mm") - 
                                            @item.MaKhungGioNavigation.GioKetThuc.ToString(@"hh\:mm")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Tùy chỉnh</span>
                                    }
                                </td>
                                <td>
                                    @item.NgaySd.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <strong class="text-success">
                                        @((item.TongTien ?? 0).ToString("N0")) VNĐ
                                    </strong>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = item.TrangThai switch
                                        {
                                            "Chờ xác nhận" => "bg-warning text-dark",
                                            "Đã xác nhận" => "bg-primary",
                                            "Đang sử dụng" => "bg-info",
                                            "Hoàn tất" => "bg-success",
                                            "Đã hủy" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">
                                        @item.TrangThai
                                    </span>
                                </td>
                                <td>
                                    @if (item.MaNvNavigation != null)
                                    {
                                        <small>
                                            <i class="fas fa-user-check"></i>
                                            @item.MaNvNavigation.HoTen
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Chưa xác nhận</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" 
                                                onclick="viewDetails(@item.MaDatSan)" 
                                                title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        
                                        @if (item.TrangThai == "Chờ xác nhận")
                                        {
                                            <button class="btn btn-sm btn-outline-success" 
                                                    onclick="showConfirmModal(@item.MaDatSan)" 
                                                    title="Xác nhận">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    onclick="showCancelModal(@item.MaDatSan)" 
                                                    title="Hủy">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox" style="font-size: 3rem; color: #ccc;"></i>
                <p class="mt-3 text-muted">Không có đơn đặt sân nào</p>
            </div>
        }
    </div>
</div>

<style>
    .table thead th {
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        vertical-align: middle;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .badge {
        padding: 0.5em 0.8em;
        font-size: 0.85em;
        font-weight: 500;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
    
    .btn-group .btn {
        margin: 0;
    }
</style>
