@model IEnumerable<global::SanBong.Models.SanBong>

@{
    ViewData["Title"] = "Quản lý Sân Bóng";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-stadium"></i> Quản Lý Sân Bóng</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm Sân Mới
        </a>
    </div>

    <!-- Filter -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Loại Sân</label>
                    <select name="maLoai" class="form-select" onchange="this.form.submit()">
                        <option value="">-- Tất cả --</option>
                        @foreach (var loai in ViewBag.LoaiSan as List<global::SanBong.Models.LoaiSan>)
                        {
                            @if (ViewBag.SelectedMaLoai != null && ViewBag.SelectedMaLoai == loai.MaLoai)
                            {
                                <option value="@loai.MaLoai" selected>@loai.TenLoai</option>
                            }
                            else
                            {
                                <option value="@loai.MaLoai">@loai.TenLoai</option>
                            }
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Tên Sân</th>
                        <th>Loại Sân</th>
                        <th>Giá/Giờ</th>
                        <th>Trạng Thái</th>
                        <th>Vị Trí</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaSan</td>
                            <td>@item.TenSan</td>
                            <td>@item.MaLoaiNavigation?.TenLoai</td>
                            <td>@item.GiaTheoGio.ToString("N0") VNĐ</td>
                            <td>
                                @if (item.TrangThai == "Hoạt động")
                                {
                                    <span class="badge bg-success">@item.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.TrangThai</span>
                                }
                            </td>
                            <td>@item.ViTri</td>
                            <td>
                                <div class="btn-group-vertical" style="gap: 3px;">
                                    <a asp-action="Details" asp-route-id="@item.MaSan" class="btn btn-sm btn-info" style="white-space: nowrap;">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaSan" class="btn btn-sm btn-warning" style="white-space: nowrap;">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaSan" class="btn btn-sm btn-danger" style="white-space: nowrap;">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
