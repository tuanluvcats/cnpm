@model global::SanBong.Models.SanBong

@{
    ViewData["Title"] = "Xóa Sân";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="bi bi-trash"></i> Xóa Sân Bóng</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>Bạn có chắc chắn muốn xóa sân này?</h4>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Mã Sân</dt>
                        <dd class="col-sm-8">@Model.MaSan</dd>

                        <dt class="col-sm-4">Tên Sân</dt>
                        <dd class="col-sm-8">@Model.TenSan</dd>

                        <dt class="col-sm-4">Loại Sân</dt>
                        <dd class="col-sm-8">@Model.MaLoaiNavigation?.TenLoai</dd>

                        <dt class="col-sm-4">Giá Theo Giờ</dt>
                        <dd class="col-sm-8">@Model.GiaTheoGio.ToString("N0") VNĐ</dd>

                        <dt class="col-sm-4">Trạng Thái</dt>
                        <dd class="col-sm-8">@Model.TrangThai</dd>

                        <dt class="col-sm-4">Vị Trí</dt>
                        <dd class="col-sm-8">@Model.ViTri</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="MaSan" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xác Nhận Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay Lại
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
