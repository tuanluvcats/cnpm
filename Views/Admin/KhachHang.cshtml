@model IEnumerable<global::SanBong.Models.KhachHang>

@{
    ViewData["Title"] = "Quản Lý Khách Hàng";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container-fluid">
    <h2><i class="bi bi-people"></i> Quản Lý Khách Hàng</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã KH</th>
                            <th>Họ Tên</th>
                            <th>Điện Thoại</th>
                            <th>Email</th>
                            <th>Địa Chỉ</th>
                            <th>CCCD</th>
                            <th>Điểm Tích Lũy</th>
                            <th>Tài Khoản</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kh in Model)
                        {
                            <tr>
                                <td>@kh.MaKh</td>
                                <td>@kh.HoTen</td>
                                <td>@kh.DienThoai</td>
                                <td>@kh.Email</td>
                                <td>@kh.DiaChi</td>
                                <td>@kh.Cccd</td>
                                <td>
                                    <span class="badge bg-success">@kh.DiemTichLuy điểm</span>
                                </td>
                                <td>
                                    @if (kh.MaTkNavigation != null)
                                    {
                                        <span>@kh.MaTkNavigation.TenDangNhap</span>
                                        <br />
                                        <small class="text-muted">
                                            @if (kh.MaTkNavigation.TrangThai == 1)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Khóa</span>
                                            }
                                        </small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
