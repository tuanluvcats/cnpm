@model IEnumerable<global::SanBong.Models.ThanhToan>
@{
    ViewData["Title"] = "Lịch sử thanh toán";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-history me-2"></i>Lịch sử thanh toán</h4>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <p class="text-muted">Bạn chưa có giao dịch thanh toán nào.</p>
                    <a asp-controller="SanBong" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-futbol me-2"></i>Đặt sân ngay
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Mã giao dịch</th>
                                <th>Sân</th>
                                <th>Phương thức</th>
                                <th class="text-end">Số tiền</th>
                                <th>Ngày thanh toán</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <code>@(item.MaGiaoDich ?? $"TT{item.MaTt:D6}")</code>
                                    </td>
                                    <td>@item.MaDatSanNavigation?.MaSanNavigation?.TenSan</td>
                                    <td>
                                        @switch (item.PhuongThuc?.ToLower())
                                        {
                                            case "momo":
                                                <span class="badge" style="background-color: #ae2070;">MoMo</span>
                                                break;
                                            case "zalopay":
                                                <span class="badge" style="background-color: #0068ff;">ZaloPay</span>
                                                break;
                                            case "vnpay":
                                                <span class="badge" style="background-color: #0066b3;">VNPay</span>
                                                break;
                                            case "tienmat":
                                                <span class="badge bg-secondary">Tiền mặt</span>
                                                break;
                                            case "chuyenkhoan":
                                                <span class="badge bg-info">Chuyển khoản</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.PhuongThuc</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end fw-bold">@item.SoTien.ToString("N0") ₫</td>
                                    <td>@(item.NgayThanhToan?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                    <td>
                                        @switch (item.TrangThai)
                                        {
                                            case "DaThanhToan":
                                            case "Đã thanh toán":
                                                <span class="badge bg-success"><i class="fas fa-check me-1"></i>Đã thanh toán</span>
                                                break;
                                            case "ChoDuyet":
                                                <span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i>Chờ xác nhận</span>
                                                break;
                                            case "ThatBai":
                                                <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Thất bại</span>
                                                break;
                                            case "DaHuy":
                                                <span class="badge bg-secondary"><i class="fas fa-ban me-1"></i>Đã hủy</span>
                                                break;
                                            case "DaHoanTien":
                                                <span class="badge bg-info"><i class="fas fa-undo me-1"></i>Đã hoàn tiền</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.TrangThai</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="DatSan" asp-action="Details" asp-route-id="@item.MaDatSan" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
